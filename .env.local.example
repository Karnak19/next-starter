# ============================================
# DATABASE
# ============================================
# PostgreSQL connection string
DATABASE_URL=postgresql://dev:devpass@localhost:5432/devdb

# ============================================
# OBJECT STORAGE (MinIO / S3-compatible)
# ============================================
# MinIO endpoint (local development)
S3_ENDPOINT=http://localhost:9000

# MinIO/S3 credentials
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin

# Default bucket name
S3_BUCKET=uploads

# S3 Region (MinIO doesn't use this, but SDK requires it)
S3_REGION=us-east-1

# ============================================
# AUTH
# ============================================
# Better Auth Secret
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here

# ============================================
# PRODUCTION / CLOUD S3
# ============================================
# For production with AWS S3 or other S3-compatible services:
# S3_ENDPOINT=https://s3.amazonaws.com  # or your provider's endpoint
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1  # your region
